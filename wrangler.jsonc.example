/**
 * For more details on how to configure Wrangler, refer to:
 * https://developers.cloudflare.com/workers/wrangler/configuration/
 */
{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "radar-url-scanner",
	"main": "worker/index.ts",
	"compatibility_date": "2025-11-19",
	"assets": {
		"not_found_handling": "single-page-application",
		"run_worker_first": ["/api/*", "/ws/*"]
	},
	"observability": {
		"enabled": true
	},
	"d1_databases": [
		{
			"binding": "radar_scanner_db",
			"database_name": "radar-scanner-db",
			"database_id": "<DATABASE_ID>"
		}
	],
	"r2_buckets": [
		{
			"bucket_name": "radar-scan-reports",
			"binding": "radar_scan_reports"
		}
	],
	"durable_objects": {
		"bindings": [
			{
				"name": "SESSION_MANAGER",
				"class_name": "SessionManager",
				"script_name": "radar-url-scanner"
			}
		]
	},
	"workflows": [
		{
			"binding": "SCAN_WORKFLOW",
			"name": "scan-workflow",
			"class_name": "ScanWorkflow"
		}
	],
	"vars": {
		"CLOUDFLARE_ACCOUNT_ID": "<CLOUDFLARE_ACCOUNT_ID>",
		"APP_URL": "<APP_URL>"
	},
	"placement": {
		"mode": "smart"
	}
}